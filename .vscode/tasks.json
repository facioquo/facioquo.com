{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install: Ruby Gem packages",
      "type": "shell",
      "command": "bundle install --jobs 4 && bundle clean --force",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "BUNDLE_GEMFILE": "${workspaceFolder}/Gemfile",
          "BUNDLE_PATH": "${workspaceFolder}/vendor/bundle"
        }
      },
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Update: Ruby Gem packages",
      "type": "shell",
      "command": "bundle update --conservative && bundle clean --force",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "BUNDLE_GEMFILE": "${workspaceFolder}/Gemfile",
          "BUNDLE_PATH": "${workspaceFolder}/vendor/bundle"
        }
      },
      "dependsOn": "Install: Ruby Gem packages",
      "dependsOrder": "sequence",
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Run: Website with LiveReload",
      "type": "shell",
      "command": "bundle exec jekyll serve --livereload --open-url",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "BUNDLE_GEMFILE": "${workspaceFolder}/Gemfile",
          "BUNDLE_PATH": "${workspaceFolder}/vendor/bundle"
        }
      },
      "dependsOn": "Install: Ruby Gem packages",
      "dependsOrder": "sequence",
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Lint: Markdown",
      "type": "shell",
      "command": "npm run lint:md",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Fix: Markdown",
      "type": "shell",
      "command": "npm run fix:md",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
