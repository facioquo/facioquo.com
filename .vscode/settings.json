{
  // file settings
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 3000,
  "files.encoding": "utf8",
  "files.exclude": {
  },
  // search settings, auto excludes files.exclude
  "search.exclude": {
    "**/_site/**": true
  },
  // editor settings
  "editor.codeLens": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.formatOnPaste": true,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "scss.validate": false, // false-positives on SCSS files with Jekyll front matter
  // markdown settings
  "markdownlint.config": {
    "MD033": false, // no-inline-html
    "MD025": false, // single-title/single-h1 --> fails with front-matter
    "MD041": false, // single-title/single-h1 --> fails with front-matter
  },
  // dictionary exceptions
  "cSpell.words": [
    "daveskender",
    "endunless",
    "facioquo",
    "G-S4GLSZNG8N",
    "mdate",
    "microsite",
    "microsites",
    "minifier",
    "skenderco"
  ],
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders"
  ],
  "cSpell.ignoreWords": [
    "disqus",
    "forloop",
    "webrick",
    "xmlschema"
  ],
   "cSpell.enableFiletypes": [
    "!asciidoc",
    "!c",
    "!cpp",
    "!css",
    "!elixir",
    "!git-commit",
    "!go",
    "!graphql",
    "!handlebars",
    "!haskell",
    "!jade",
    "!java",
    "!javascript",
    "!javascriptreact",
    "!jsonc",
    "!latex",
    "!less",
    "!pug",
    "!python",
    "!restructuredtext",
    "!rust",
    "!scala",
    "!swift",
    "!typescript",
    "!typescriptreact",
    "!vue"
  ]
}