{
  "globs": [
    "**/*.md",
    "**/*.markdown"
  ],
  "ignores": [
    "_site/**",
    ".jekyll-cache/**",
    "node_modules/**",
    "vendor/**"
  ],
  "config": {
    "default": true,
    "MD003": {
      "style": "atx"
    },
    "MD004": {
      "style": "dash"
    },
    "MD007": {
      "indent": 2
    },
    "MD013": false,
    "MD025": false,
    "MD033": false,
    "MD046": {
      "style": "fenced"
    },
    "MD048": {
      "style": "backtick"
    }
  }
}
